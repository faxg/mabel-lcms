{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.29.47.4906",
      "templateHash": "14386773577668690617"
    }
  },
  "parameters": {
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "The Azure region into which the resources should be deployed."
      }
    },
    "environmentType": {
      "type": "string",
      "allowedValues": [
        "development",
        "production"
      ],
      "metadata": {
        "description": "The type of environment. This must be \"devlopment\" or \"production\"."
      }
    },
    "resourceNameSuffix": {
      "type": "string",
      "defaultValue": "[format('{0}{1}', take(toLower(uniqueString(resourceGroup().id, parameters('environmentType'))), 7), parameters('environmentType'))]",
      "maxLength": 18,
      "metadata": {
        "description": "A unique suffix to add to resource names that need to be globally unique."
      }
    },
    "externalApiUrl": {
      "type": "string",
      "metadata": {
        "description": "An external API endpoint, potentially different per environment"
      }
    }
  },
  "variables": {
    "appServiceAppName": "[format('mabel-app-{0}', parameters('resourceNameSuffix'))]",
    "appServicePlanName": "[format('mabel-app-plan-{0}', parameters('resourceNameSuffix'))]",
    "storageAccountName": "[toLower(format('mabel{0}', parameters('resourceNameSuffix')))]",
    "environmentConfigurationMap": {
      "development": {
        "externalApiUrl": "[parameters('externalApiUrl')]",
        "appServiceApp": {
          "alwaysOn": false
        },
        "appServicePlan": {
          "sku": {
            "name": "F1",
            "capacity": 1
          }
        },
        "storageAccount": {
          "sku": {
            "name": "Standard_LRS"
          }
        }
      },
      "production": {
        "externalApiUrl": "[parameters('externalApiUrl')]",
        "appServiceApp": {
          "alwaysOn": true
        },
        "appServicePlan": {
          "sku": {
            "name": "S1",
            "capacity": 1
          }
        },
        "storageAccount": {
          "sku": {
            "name": "Standard_ZRS"
          }
        }
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-03-01",
      "name": "[variables('appServicePlanName')]",
      "location": "[parameters('location')]",
      "sku": "[variables('environmentConfigurationMap')[parameters('environmentType')].appServicePlan.sku]"
    },
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-03-01",
      "name": "[variables('appServiceAppName')]",
      "location": "[parameters('location')]",
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "httpsOnly": true,
        "siteConfig": {
          "alwaysOn": "[variables('environmentConfigurationMap')[parameters('environmentType')].appServiceApp.alwaysOn]",
          "appSettings": [
            {
              "name": "MabelStorageAccountConnectionString",
              "value": "[format('DefaultEndpointsProtocol=https;AccountName={0};EndpointSuffix={1};AccountKey={2}', variables('storageAccountName'), environment().suffixes.storage, listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2022-09-01').keys[0].value)]"
            },
            {
              "name": "externalApiUrl",
              "value": "[variables('environmentConfigurationMap')[parameters('environmentType')].externalApiUrl]"
            }
          ]
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "[resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName'))]"
      ]
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "2022-09-01",
      "name": "[variables('storageAccountName')]",
      "location": "[parameters('location')]",
      "kind": "StorageV2",
      "sku": "[variables('environmentConfigurationMap')[parameters('environmentType')].storageAccount.sku]"
    }
  ]
}